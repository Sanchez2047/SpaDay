<h1>Fancy Spa</h1>
<div id="clientProfile">
    <h3>Client Profile</h3>
    <p>@ViewBag.name</p>
</div>
<div id="servicesMenu">

    <h5>Facial Treatments</h5>
    <p>Your @ViewBag.skintype skin type is best suited to the follow facial types:</p>

    <ul>
        @*//TODO: iterate through appropriate facial treatments*@
        @foreach (string facial in ViewBag.appropriateFacials)
        {
            <li>@facial</li>
        }

    </ul>

    <h5>Nail Services</h5>
    @*// TODO: display a description for the nail service selected*@
    @if (ViewBag.manipedi == "manicure")
    {
        <p>Our manicure is a great way to spend 30 minutes of your day! We use shea butter hand cream and the finest gel polish.</p>
    }
    @if (ViewBag.manipedi == "pedicure")
    {
        <p>Relax for 45 minutes in pure luxury! Our massage chairs and experienced nail techs are here to get your feet in shape for sandal season!</p>
    }
    @if (ViewBag.manipedi == "both")
    {
        <ul>
            <li>Our manicure is a great way to spend 30 minutes of your day! We use shea butter hand cream and the finest gel polish.</li>
            <li>Relax for 45 minutes in pure luxury! Our massage chairs and experienced nail techs are here to get your feet in shape for sandal season!</li>
        </ul>
    }
</div>
    <h5>Nail Colors</h5>
    <div class="nails">
        <div class="colorblock" id="blue" tabindex="0"></div>
        <div class="colorblock" id="red" tabindex="0"></div>
        <div class="colorblock" id="grey" tabindex="0"></div>
        <div class="colorblock" id="black" tabindex="0"></div>
        <div class="colorblock" id="green" tabindex="0"></div>
        <div class="colorblock" id="turquoise" tabindex="0"></div>
    </div>
