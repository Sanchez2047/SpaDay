@using SpaDay.ViewModels;

@model AddUserViewModel;

<form method="post" asp-controller="User" asp-action="Add">

    <div class="form-group">
        <label asp-for="Username">Username:</label><br />
        <input asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Password:</label><br />
        <input type="password" asp-for="Password"/>
        <span asp-validation-for="Password"></span>
    </div>

    <div class="form-group">
        <label asp-for="VerifyPassword">Verify Password:</label><br />
        <input type="password" asp-for="VerifyPassword" />
        <span asp-validation-for="VerifyPassword"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email:</label><br />
        <input asp-for="Email"/>
        <span asp-validation-for="VerifyPassword"></span>
    </div>

    <input type="submit" value="Submit" />
</form>
